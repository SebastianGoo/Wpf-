    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- GridView 占据更多空间 -->
            <ColumnDefinition Width="*"/>
            <!-- 信息显示区域 -->
        </Grid.ColumnDefinitions>

        <telerik:RadGridView Grid.Column="0"
                             ItemsSource="{Binding Items}"
                             AutoGenerateColumns="True"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="Name" DataMemberBinding="{Binding Name}" />
                <telerik:GridViewDataColumn Header="Age" DataMemberBinding="{Binding Age}" />
                <telerik:GridViewDataColumn Header="Email" DataMemberBinding="{Binding Email}" />
                <!-- 新增列 -->
                <telerik:GridViewDataColumn Header="Address" DataMemberBinding="{Binding Address}" />
                <telerik:GridViewDataColumn Header="Phone" DataMemberBinding="{Binding Phone}" />
            </telerik:RadGridView.Columns>
            <!-- 配置你的 GridView -->
        </telerik:RadGridView>

        <Border Grid.Column="1" Background="LightGray">
            <TextBlock Text="信息显示区域" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </Grid>


