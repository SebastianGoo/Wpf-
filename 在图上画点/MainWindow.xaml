<Window x:Class="在图上画点.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:在图上画点"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Canvas  Name="canvas" Grid.Row="0">
            <Image Name="imageView" Stretch="Uniform" MouseDown="Image_MouseDown"/>
        </Canvas>
        <Button Grid.Row="1" Content="Save" FontSize="20" Height='30' Width="50" Click="Button_Click" />
    </Grid>
</Window>
